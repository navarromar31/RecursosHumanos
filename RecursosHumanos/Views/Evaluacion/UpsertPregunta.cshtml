@model RecursosHumanos_Models.ViewModels.PreguntaVM


@{
    var titulo = "Crear una nueva pregunta";
}
@{
    Layout = "_LayoutRRHH";
}

<head>
    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>RRHH Cuestionario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/EvaluacionHoja.css" rel="stylesheet">
    <link href="~/css/EvaPrincipal.css" rel="stylesheet">
</head>
<body>

    <div id="Evaluacion-container" class="container mt-5">

        <h5>@titulo</h5>

        <div id="linea-Formulario"></div>

        <form method="post" asp-controller="Evaluacion" asp-action="UpsertPregunta" enctype="multipart/form-data">


            <div class="row mb-4">
                <div class="col-md-12">

                    <div class="card">

                        <div class="card-body">

                            <label asp-for="Pregunta.Texto" class="form-label">Introduce tu pregunta</label>
                            <input id="TextoPregunta" asp-for="Pregunta.Texto" class="form-control mb-2" placeholder="Introduce tu pregunta" type="input" />
                            <div hidden>
                                Pregunta.Id=contador;

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-2 mt-2">
                                <!--     card-->
                                <div class="card-body">
                                    <label asp-for="Pregunta.IdCapacitacion" class="form-label">Capacacitacion a la que pertenece esta pregunta</label>
                                    <select asp-for="Pregunta.IdCapacitacion" asp-items="@Model.CapacitacionLista" class="form-select">
                                        <option disabled selected>--Seleccione Capacacitacion </option>
                                    </select>


                                </div>
                                <!--     card-->


                            </div>
                        </div>
                        <div class="d-flex justify-content-end mb-4 mr-2">

                            <button type="submit" asp-controller="Evaluacion" asp-action="UpsertPregunta" class="btn btn-primary btn-nueva-capacitacion" id="btn-Eva">
                                Guardar pregunta
                            </button>

                        </div>
                    </div>

                </div>

            </div>

        </form>
    </div>





</body>
