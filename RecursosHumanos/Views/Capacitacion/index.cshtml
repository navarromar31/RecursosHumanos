@model IEnumerable<RecursosHumanos_Models.Capacitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/cssc.css" rel="stylesheet" />

<div class="container" id="BarraBusqueda">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
            <form asp-action="Index" method="get">
                <div class="input-group mb-3">
                    <input 
                        type="text" 
                        class="form-control" 
                        name="searchTerm" 
                        placeholder="Buscar Capacitación..." 
                        aria-label="Buscar Capacitación..." 
                        aria-describedby="button-addon2" 
                        value="@ViewData["searchTerm"]" />
                    <button class="btn btn-outline-secondary" type="submit" id="button-buscarCap">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container" id="MostrarCapacitaciones">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-center shadow-sm" style="border-radius: 5px;">
                <div class="card-body">
                    <h4 class="card-title mb-3" style="font-weight: 400;">Agregar una Nueva Capacitación</h4>
                    <hr class="my-3" />
                    <div>
                        <!-- Enlace que redirige a la vista Upsert -->
                        <a asp-controller="Capacitacion" asp-action="Crear" class="btn btn-outline-warning rounded-circle mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                            <i class="bi bi-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<br />
<br />
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var capacitacion in Model)
                    {
                        <div class="col">
                            <a href="@Url.Action("Upsert", new { id = capacitacion.Id })" class="text-decoration-none">
                                <div class="glass-card shadow-lg border-0 position-relative" style="height: 300px;">
                                    <div class="image-container" style="height: 100%;">
                                        <img src="@capacitacion.ImagenUrlCap" class="card-img-top image-blur" alt="Imagen de @capacitacion.NombreCapacitacion" style="object-fit: cover; height: 100%; width: 100%;" />
                                    </div>
                                </div>
                            </a>
                        </div>
                    }

                        <!-- Contenido de la tarjeta -->
                        <div class="card-body">
                            <h5 class="card-title">@item.NombreCapacitacion</h5>
                            <p class="card-text">
                                <strong>Duración:</strong> @item.Duracion.Substring(0, Math.Min(item.Duracion.Length, 100))...<br />
                                <strong>Modalidad:</strong> @item.Modalidad
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Capacitacion" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-warning">
                                    Editar
                                </a>
                                <a asp-controller="Capacitacion" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-warning">
                                    Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/capacitacion.js"></script>
