@model IEnumerable<RecursosHumanos_Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}
@{
    Layout = "_LayoutRRHH";
}
<head>
    <link rel="stylesheet" href="~/css/departamentos.css" />
</head>

<div id="container" class="container mt-5">
    <h1>Gestión de Departamentos</h1>

    <!-- Campo de búsqueda 
    <div id="input-container-departamento" class="mb-3">
        <input type="text" id="buscarDepartamento" placeholder="Buscar departamento..." class="form-control" />
        <button id="boton-departamento" class="btn btn-primary mt-2">Buscar</button>
    </div>
    -->

    <a href="@Url.Action("Crear")" class="btn btn-primary">Agregar Departamento</a>

    <table class="table table-striped mt-3" id="tablaDepartamentos">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody id="listaDepartamento">
            @foreach (var departamento in Model)
            {
                <tr>
                    <td>@departamento.Id</td>
                    <td>@departamento.NombreDepartamento</td>
                    <td>@departamento.DescripcionDepartamento</td>
                    <td>@(departamento.EstadoDepartamento ? "Activo" : "Inactivo")</td>
                    <td>
                        <a href="@Url.Action("Editar", new { Id = departamento.Id })" class="btn btn-warning">Editar</a>
                        <a href="@Url.Action("Eliminar", new { Id = departamento.Id })" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/departamentos.js"></script>