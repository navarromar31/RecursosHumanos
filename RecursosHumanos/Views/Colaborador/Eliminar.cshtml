@model RecursosHumanos_Models.Colaborador
@using RecursosHumanos_Utilidades
@using RecursosHumanos_Models


@{
    ViewData["Title"] = " Crear Evaluacion";
}
<html lang="es">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>RRHH Cuestionario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/EvaluacionHoja.css" rel="stylesheet">
    <link href="~/css/EvaPrincipal.css" rel="stylesheet">
</head>

<body>

    @if (User.IsInRole(WC.AdminRole))
    {

        <form method="post" asp-controller="Colaborador" asp-action="Eliminar" enctype="multipart/form-data">

            <div id="Evaluacion-container" class="container mt-5">

                <h2>Editar Colaborador  </h2>

                <div id="linea-Formulario"></div>

                <div class="row mb-4 mt-5">
                    <div class="col-md-6 mb-4">

                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="NombreColaborador" id="input-Evaluacion" class="form-control" placeholder="Introduce el nombre del colaborador" type="text" />

                            </div>

                        </div>

                    </div>
                    <div class="col-md-6 mb-4">

                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="CorreoColaborador" id="input-Evaluacion" class="form-control mb-2" placeholder="Introduce el correo del colaborador" type="text" />

                            </div>

                        </div>

                    </div>
                    <div class="col-md-6 mb-4">

                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="CedulaColaborador" id="input-Evaluacion" class="form-control mb-2" placeholder="Introduce la cédula del colaborador" type="text" />

                            </div>

                        </div>
                        <div class="card-body">
                            <label asp-for="IdDepartamento" class="form-label">Capacacitacion a la que pertenece esta pregunta</label>
                            <select asp-for="IdDepartamento" asp-items="@Model.IdDepartamento" class="form-select">
                                <option disabled selected>--Seleccione Capacacitacion </option>
                            </select>


                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">

                    <div type="submit" class="box" id="box-Evaluacion">

                        <button type="submit" class="btn btn-eliminar" id="btn-eliminar-Eva" method="post">
                            Actualizar
                        </button>

                    </div>

                </div>

            </div>



            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

        </form>


    }
</body>

</html>
