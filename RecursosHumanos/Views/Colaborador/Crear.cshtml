@model RecursosHumanos_Models.ViewModels.ColaboradorVM
@{
    ViewData["Title"] = "Crear Colaborador";
}

@* Incluyendo Bootstrap para el diseño *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form asp-action="Crear" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="NombreColaborador" class="form-label">Nombre del Colaborador</label>
                    <input type="text" class="form-control" id="NombreColaborador" name="Colaborador.NombreColaborador" required />
                </div>

                <div class="mb-3">
                    <label for="Puesto" class="form-label">Puesto</label>
                    <select id="Puesto" name="Colaborador.PuestoId" class="form-select" required>
                        <option value="">Seleccione un puesto</option>
                        @foreach (var puesto in Model.Puesto)
                        {
                            <option value="@puesto.Value">@puesto.Text</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Departamento" class="form-label">Departamento</label>
                    <select id="Departamento" name="Colaborador.DepartamentoId" class="form-select" required>
                        <option value="">Seleccione un departamento</option>
                        @foreach (var departamento in Model.Departamento)
                        {
                            <option value="@departamento.Value">@departamento.Text</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="Institucion" class="form-label">Institución</label>
                    <select id="Institucion" name="Colaborador.InstitucionId" class="form-select" required>
                        <option value="">Seleccione una institución</option>
                        @foreach (var institucion in Model.Institucion)
                        {
                            <option value="@institucion.Value">@institucion.Text</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Crear Colaborador</button>
            </div>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
