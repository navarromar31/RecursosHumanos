
@model RecursosHumanos_Models.ViewModels.ColaboradorVM
@using RecursosHumanos_Utilidades
@using RecursosHumanos_Models


@{
    ViewData["Title"] = " Crear Evaluacion";
}
<html lang="es">

<head>

    <meta charset="UTF-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>RRHH Cuestionario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/EvaluacionHoja.css" rel="stylesheet">
    <link href="~/css/EvaPrincipal.css" rel="stylesheet">
</head>

<body>

      @if (User.IsInRole(WC.AdminRole))
    {

            <form method="post" asp-controller="Colaborador" asp-action="Crear" enctype="multipart/form-data">

                <div id="Evaluacion-container" class="container mt-5">

                    <h2> Editar evaluación</h2>

                    <div id="linea-Formulario"></div>

                    <div class="row mb-4 mt-5">
                        <div class="col-md-6 mb-4">

                            <div class="card mb-4">

                                <div class="card-body">

                                    <input asp-for="Colaborador.NombreColaborador" id="input-Evaluacion" class="form-control" placeholder="Introduce el nombre del colaborador" type="text" />

                                </div>

                            </div>

                        </div>
                        <div class="col-md-6 mb-4">
                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="Colaborador.Apellido1" id="input-Evaluacion" class="form-control" placeholder="Introduce el primer apellido del colaborador" type="text" />

                            </div>

                        </div>

                        </div>
                     </div>
                <div class="row mb-4 mt-5">
                    <div class="col-md-6 mb-4">

                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="Colaborador.Apellido2" id="input-Evaluacion" class="form-control" placeholder="Introduce el segundo apellido del colaborador" type="text" />
                            </div>

                        </div>

                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card mb-4">

                            <div class="card-body">

                                <input asp-for="Colaborador.CedulaColaborador" id="input-Evaluacion" class="form-control mb-2" placeholder="Introduce la cédula del colaborador" type="text" />>

                            </div>
                            <div class="card-body">

                            <input asp-for="Colaborador.CorreoColaborador" id="input-Evaluacion" class="form-control mb-2" placeholder="Introduce el correo del colaborador" type="text" />

                        </div>
                        </div>

                    </div>
                </div>
                <div class="row mb-4 mt-5">
                    <div class="col-md-6 mb-4">

                        <div class="card-body">
                            <label asp-for="Colaborador.IdDepartamento" class="form-label">Departamento al que pertenece </label>
                            <select asp-for="Colaborador.IdDepartamento" asp-items="@Model.DepartamentoLista" class="form-select">
                                <option disabled selected>--Seleccione </option>
                            </select>


                        </div>
                        <div class="card-body">
                            <label asp-for="Colaborador.IdInstitucion" class="form-label">Institución al que pertenece </label>
                            <select asp-for="Colaborador.IdInstitucion" asp-items="@Model.InstitucionLista" class="form-select">
                                <option disabled selected>--Seleccione </option>
                            </select>


                        </div>
                        <div class="card-body">
                            <label asp-for="Colaborador.IdPuesto" class="form-label">Puesto al que pertenece </label>
                            <select asp-for="Colaborador.IdPuesto" asp-items="@Model.PuestoLista" class="form-select">
                                <option disabled selected>--Seleccione  </option>
                            </select>


                        </div>
                        </div>
                        </div>


                       

                       
                    <div class="d-flex justify-content-end">

                        <div type="submit" class="box" id="box-Evaluacion">

                            <button type="submit" class="btn btn-eliminar" id="btn-eliminar-Eva" method="post">
                                Crear colaborador
                            </button>

                        </div>

                    </div>

                </div>



                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

            </form>


    }
</body>

</html>
