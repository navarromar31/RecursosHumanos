@model RecursosHumanos_Models.ViewModels.ColaboradorVM
@{
    ViewData["Title"] = "Crear Colaborador";
}

@* Incluyendo Bootstrap para el diseño *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/colaboradores.css" rel="stylesheet" />

<h2>@ViewData["Title"]</h2>

<div class="container">
    <form asp-action="Crear" method="post" enctype="multipart/form-data">
        <!-- Campo para el nombre del colaborador -->
        <div class="form-group">
            <label for="Nombre">Nombre:</label>
            <input type="text" name="Colaborador.Nombre" class="form-control" asp-for="Colaborador.NombreColaborador" placeholder="Ingrese el nombre del colaborador" />
        </div>

        <!-- Imagen -->
        <div class="form-group">
            <label for="Imagen">Imagen:</label>
            <input type="file" name="Imagen" class="form-control" />
            @if (Model.Colaborador.ImagenUrlCol != null)
            {
                <img src="@Url.Content($"~/imagenes/colaboradores/{Model.Colaborador.ImagenUrlCol}")" alt="Imagen del colaborador" width="100" />
            }
        </div>

        <!-- Departamento -->
        @if (Model.Departamento != null && Model.Departamento.Any())
        {
            <div class="form-group">
                <label for="Departamento">Departamento:</label>
                <select asp-for="Colaborador.IdDepartamento" class="form-control" asp-items="@(new SelectList(Model.Departamento, "Value", "Text"))">
                    <option value="">Seleccione un departamento</option>
                </select>
            </div>
        }
        else
        {
            <p>No se encontraron departamentos.</p>
        }

        <!-- Institución -->
        @if (Model.Institucion != null && Model.Institucion.Any())
        {
            <div class="form-group">
                <label for="Institucion">Institución:</label>
                <select asp-for="Colaborador.IdInstitucion" class="form-control" asp-items="@(new SelectList(Model.Institucion, "Value", "Text"))">
                    <option value="">Seleccione una institución</option>
                </select>
            </div>
        }
        else
        {
            <p>No se encontraron instituciones.</p>
        }

        <!-- Puesto -->
        @if (Model.Puesto != null && Model.Puesto.Any())
        {
            <div class="form-group">
                <label for="Puesto">Puesto:</label>
                <select asp-for="Colaborador.IdPuesto" class="form-control" asp-items="@(new SelectList(Model.Puesto, "Value", "Text"))">
                    <option value="">Seleccione un puesto</option>
                </select>
            </div>
        }
        else
        {
            <p>No se encontraron puestos.</p>
        }

        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/colaboradores.js"></script>
