@model RecursosHumanos_Models.ViewModels.ColaboradorVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Encabezado de la lista -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="bi bi-people-fill"></i> Lista de Colaboradores</span>
            <a href="@Url.Action("Upsert", "Colaboradores")" class="btn btn-success btn-sm">
                <i class="bi bi-person-plus-fill"></i> Agregar Colaborador
            </a>
        </div>
        <div class="card-body">
            <!-- Lista de colaboradores -->
            @if (Model.Colaborador != null)
            {
                <ul class="list-unstyled">
                    <li class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <img src="@Model.Colaborador.ImagenUrlCol" alt="Foto de @Model.Colaborador.NombreColaborador" class="rounded-circle me-3" style="width: 50px; height: 50px;" />
                            <strong>@Model.Colaborador.NombreColaborador</strong> - @Model.Colaborador.Departamento
                        </div>
                        <a href="@Url.Action("VerPerfil", "Colaboradores", new { id = Model.Colaborador.Id })" class="btn btn-primary btn-sm">Ver Perfil</a>
                    </li>
                </ul>
            }
            else
            {
                <div class="alert alert-warning text-center">
                    <strong>No hay colaboradores registrados...</strong>
                </div>
            }
        </div>
    </div>
</div>
