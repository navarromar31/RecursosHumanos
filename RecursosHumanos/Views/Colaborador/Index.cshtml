@model RecursosHumanos_Models.ViewModels.ColaboradorVM
@using RecursosHumanos_Utilidades
@using RecursosHumanos_Models
@{
    ViewData["Title"] = "Colaborador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/EvaluacionHoja.css" rel="stylesheet">
    <link href="~/css/EvaPrincipal.css" rel="stylesheet">

</head>
<body>
    @if (User.IsInRole(WC.AdminRole))
    {

        <div class="container mt-5" id="contprincipal">

            <h4 id="titulo-evaluaciones-pasadas">Colaboradores</h4>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Buscar Evaluación..." aria-label="Buscar colaboradores..." aria-describedby="button-addon2">
                <button class="btn btn-outline-secondary" type="button" id="btn-Eva">
                    <i class="bi bi-search"></i>
                </button>
            </div>

            <div id="evaluaciones-pasadas" class="mb-4">
                @if (Model.ColaboradorLista != null && Model.ColaboradorLista.Any())
                {
                    foreach (var colaborador in Model.ColaboradorLista)
                    {
                        <partial name="_EvaluacionCard" model="colaborador" />
                    }
                }
                else
                {
                    <p>No hay colaboradores disponibles.</p>
                }



                <div class="d-flex justify-content-end mb-4">
                    <a asp-controller="Colaborador" asp-action="Crear" class="btn btn-primary btn-nueva-capacitacion" id="btn-Eva">
                        Nuevo colaborador
                    </a>

                </div>
            </div>


        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

 


    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
