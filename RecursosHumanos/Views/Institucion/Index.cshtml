@{
    ViewData["Title"] = "Instituciones";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/instituciones.css" rel="stylesheet" />

<body>
    <!-- Encabezado hero con título y llamada a la acción -->
    <header id="heroInstitucion" class="hero">
        <div class="hero-contentInstitucion">
            <h1>Instituciones Asociadas a HHC</h1>
            <p>Juntos construimos un futuro brillante para Costa Rica</p>
            <a href="#" id="btn-cta-Institucion" class="btn btn-cta">¡Conócenos!</a>
        </div>
    </header>

    <!-- Sección para mostrar las instituciones -->
    <section id="instituciones" class="container my-5">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var institucion in Model.Institucion)
            {
                <div class="col">
                    <a href="@Url.Action("Upsert", new { id = institucion.Id })" class="text-decoration-none">
                        <div class="glass-card shadow-lg border-0 position-relative" style="height: 300px;">
                            <!-- Imagen de la institución con difuminado -->
                            <div class="image-container" style="height: 100%;">
                                <img src="@institucion.ImagenUrlInstitucion" class="card-img-top image-blur" alt="Imagen de @institucion.NombreInstitucion" style="object-fit: cover; height: 100%; width: 100%;" />
                            </div>
                        </div>
                    </a>
                </div>
            }

            <!-- Tarjeta para agregar nueva institución -->
            <div class="col">
                <a href="@Url.Action("Crear", "Institucion")" class="text-decoration-none">
                    <div class="glass-card shadow-lg border-0" style="height: 300px;">
                        <div id="overlay-Institucion" class="overlay"></div>
                        <div id="card-content-Institucion" class="card-content">
                            <h5 id="card-title-Institucion" class="card-title">Añadir Institución</h5>
                            <!-- Icono para agregar nueva institución -->
                            <i id="iconInstitucion" class="bi bi-building-fill-add"></i> Añadir
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <!-- Modal para agregar una nueva institución -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div id="naranjaInstitucion" class="modal-header">
                    <h5 class="modal-title" id="addDepartmentModalLabel">Agregar Institución</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addDepartmentForm" enctype="multipart/form-data" method="post">
                        <div class="mb-3">
                            <label for="newName" class="form-label">Nombre de la institución</label>
                            <input type="text" class="form-control" id="newName" name="NombreInstitucion" required>
                        </div>
                        <div class="mb-3">
                            <label for="newDescription" class="form-label">Descripción</label>
                            <textarea class="form-control" id="newDescription" name="DescripcionInstitucion" rows="4" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="newImage" class="form-label">Imagen de la institución</label>
                            <input type="file" class="form-control" id="newImage" name="imagenInstitucion" required>
                        </div>
                        <button type="submit" class="btn btn-success" id="addDepartmentBtn2">Agregar institución</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/instituciones.js"></script>
</body>