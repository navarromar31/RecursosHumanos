@model IEnumerable<RecursosHumanos_Models.Institucion>

<h2>Instituciones en la Papelera</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var institucion in Model)
        {
            <tr>
                <td>@institucion.NombreInstitucion</td>
                <td>@institucion.DescripcionInstitucion</td>
                <td>
                    <a href="@Url.Action("Restaurar", new { id = institucion.Id })" class="btn btn-success">Restaurar</a>
                    <a href="@Url.Action("EliminarPermanente", new { id = institucion.Id })" class="btn btn-danger">Eliminar Permanentemente</a>
                </td>
            </tr>
        }
    </tbody>
</table>

