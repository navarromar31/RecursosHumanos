@model RecursosHumanos_Models.Puesto

@{
    ViewData["Title"] = Model.Id == 0 ? "Crear Nuevo Puesto" : "Editar Puesto";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/puesto.css" rel="stylesheet" />

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <!-- Formulario de edición de puesto -->
        <div class="col-md-8">
            <form asp-action="Upsert" method="post">
                <div class="form-group">
                    <label for="NombrePuesto">Nombre del Puesto</label>
                    <input type="text" class="form-control" id="NombrePuesto" name="NombrePuesto" value="@Model.NombrePuesto" required />
                </div>

                <div class="form-group">
                    <label for="DescripcionPuesto">Descripción</label>
                    <textarea class="form-control" id="DescripcionPuesto" name="DescripcionPuesto" required>@Model.DescripcionPuesto</textarea>
                </div>

                <!-- Botón de guardar (naranja) -->
                <button type="submit" class="btn" style="background-color: #ff6600; color: white;">Guardar</button>
                <a href="@Url.Action("Index", "Puesto")" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>

        <!-- Botón de eliminar (naranja) en la columna derecha -->
        <div class="col-md-4">
            @if (Model.Id != 0)
            {
                <h3>Eliminar Puesto</h3>
                <p>Si deseas eliminar este puesto, haz clic en el botón de abajo.</p>
                <a href="@Url.Action("Eliminar", new { id = Model.Id })" class="btn" style="background-color: #ff6600; color: white;">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/puesto.js"></script>