@model RecursosHumanos_Models.Puesto

@{
    ViewData["Title"] = Model.Id == 0 ? "Crear Nuevo Puesto" : "Editar Puesto";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/puestos.css" rel="stylesheet" />

<h2 class="text-center">@ViewData["Title"]</h2> <!-- Centrado de título -->

<div class="container min-vh-75 d-flex justify-content-center align-items-center">
    <div class="row w-100 justify-content-center">
        <!-- Formulario de edición de puesto -->
        <div class="col-md-8">
            <form asp-action="Upsert" method="post" enctype="multipart/form-data">
                <div class="form-group mb-3">
                    <label for="NombrePuesto">Nombre del Puesto</label>
                    <input type="text" class="form-control" id="NombrePuesto" name="NombrePuesto" value="@Model.NombrePuesto" required />
                </div>

                <div class="form-group mb-3">
                    <label for="DescripcionPuesto">Descripción</label>
                    <textarea class="form-control" id="DescripcionPuesto" name="DescripcionPuesto" required>@Model.DescripcionPuesto</textarea>
                </div>

                <!-- Espacio entre los botones y el formulario -->
                <div class="mt-3">
                    <button type="submit" class="btn" style="background-color: #ff6600; color: white;">Guardar</button>
                    <a href="@Url.Action("Index", "Puesto")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>

        <!-- Botón de eliminar (naranja) en la columna derecha -->
        <div class="col-md-4 mt-3">
            <h3 class="text-center">Eliminar Puesto</h3>
            <p class="text-center">Si deseas eliminar este puesto, haz clic en el botón de abajo.</p>
            <div class="text-center">
                <a href="@Url.Action("Eliminar", new { id = Model.Id })" class="btn" style="background-color: #ff6600; color: white;">
                    <i class="bi bi-trash"></i> Eliminar
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/puestos.js"></script>
