
@model IEnumerable<RecursosHumanos_Models.Puesto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/puesto.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<div class="container" id="BarraBusqueda">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2">
            <form asp-action="Index" method="get">
                <div class="input-group mb-3">
                    <input 
                        type="text" 
                        class="form-control" 
                        name="searchTerm" 
                        placeholder="Buscar Puesto..." 
                        aria-label="Buscar Puesto..." 
                        aria-describedby="button-addon2" 
                        value="@ViewData["searchTerm"]" />
                    <button class="btn btn-outline-secondary" type="submit" id="button-buscarPuesto">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container" id="MostrarPuestos">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card text-center shadow-sm" style="border-radius: 10px;">
                <div class="card-body">
                    <h4 class="card-title mb-3" style="font-weight: 600;">Agregar un Nuevo Puesto</h4>
                    <hr class="my-3" />
                    <div>
                        <!-- Enlace que redirige a la vista Crear -->
                        <a asp-controller="Puesto" asp-action="Crear" class="btn btn-outline-primary mb-3" style="width: 40px; height: 20px; font-size: 2rem;"> 
                            <i class="bi bi-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <!-- Contenido de la tarjeta -->
                        <div class="card-body">
                            <h5 class="card-title">@item.NombrePuesto</h5>
                            <p class="card-text">
                                <strong>Descripción:</strong> @item.DescripcionPuesto.Substring(0, Math.Min(item.DescripcionPuesto.Length, 100))...<br />
                            </p>
                            <div class="d-flex justify-content-between">
                                <!-- Botón Editar -->
                                <a asp-controller="Puesto" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">
                                    Editar
                                </a>

                                <!-- Formulario de Eliminar -->
                                <form method="post" asp-action="Eliminar" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar este puesto?');">
                                    <button type="submit" class="btn btn-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No hay puestos registrados.</p>
    }
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/puesto.js"></script>