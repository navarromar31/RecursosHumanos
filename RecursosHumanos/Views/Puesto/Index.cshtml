@model IEnumerable<RecursosHumanos_Models.Puesto>
@using RecursosHumanos_Utilidades
@using RecursosHumanos_Models

@{
    ViewData["Title"] = "Index";
    //Layout = "~/View/Shared/_Layout.cshtml";  // Si tienes un layout, define su ruta.
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Puestos - HHC</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/puestos.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    @if (User.IsInRole(WC.AdminRole))
    {
        <div class="container mt-5">
            <div class="row mb-4">
                <div class="col-12">
                    <button class="btn" id="addDepartmentBtn" data-bs-toggle="modal" data-bs-target="#addDepartmentModal">Agregar Puesto</button>
                </div>
            </div>

            <div class="row mb-4">
                <div id="d-flex-Puesto" class="col-12 d-flex justify-content-center">
                    <div id="input-container-Puesto" class="input-container">
                        <input type="text" id="buscarPuesto" class="form-control" placeholder="Buscar Puesto..." />
                        <i class="fas fa-search" id="searchIcon-Puesto"></i>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <div class="btn btn-outline-warning w-100" id="toggleButton-Puesto">Mostrar todos</div>
                    <div id="listaPuesto" class="mt-3">
                        @* Aquí generas la lista de puestos *@
                        @foreach (var puesto in Model)
                        {
                             <div class="puesto-item">
                             <h5>@puesto.NombrePuesto</h5> 
                                 <p>@puesto.DescripcionPuesto</p>
                                 Agregar un botón para editar el puesto 
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editDepartmentModal"
                              data-id="@puesto.Id" data-nombre="@puesto.NombrePuesto" data-descripcion="@puesto.DescripcionPuesto"> 
                                    Editar
                              </button>
                    </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else if (User.IsInRole(WC.ClienteRole))
    {
        <!-- Modal para agregar puesto -->
        <div class="modal fade" id="addDepartmentModal" tabindex="-1" aria-labelledby="addDepartmentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div id="naranja-Puesto" class="modal-header">
                        <h5 class="modal-title" id="addDepartmentModalLabel">Agregar Puesto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="modal-body-Puesto" class="modal-body">
                        <form id="addDepartmentForm" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="newName" class="form-label">Nombre del Puesto</label>
                                <input type="text" class="form-control" id="newName" name="newName" required />
                            </div>
                            <div class="mb-3">
                                <label for="newDescription" class="form-label">Descripción</label>
                                <textarea class="form-control" id="newDescription" name="newDescription" rows="4" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="newImage" class="form-label">Imagen URL</label>
                                <input type="text" class="form-control" id="newImage" name="newImage" required />
                            </div>
                            <button type="submit" class="btn" id="addDepartmentBtn2">Agregar Puesto</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal para editar puesto -->
        <div class="modal fade" id="editDepartmentModal" tabindex="-1" aria-labelledby="editDepartmentModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div id="naranja-Puesto" class="modal-header">
                        <h5 class="modal-title" id="editDepartmentModalLabel">Editar Puesto</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="modal-body-Puesto" class="modal-body">
                        <form id="editDepartmentForm" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="editName" class="form-label">Nombre del Puesto</label>
                                <input type="text" class="form-control" id="editName" name="editName" required />
                            </div>
                            <div class="mb-3">
                                <label for="editDescription" class="form-label">Descripción</label>
                                <textarea class="form-control" id="editDescription" name="editDescription" rows="4" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="editImage" class="form-label">Imagen del puesto</label>
                                <input type="file" class="form-control" id="editImage" name="editImage" />
                            </div>
                            <button type="submit" class="btn" id="botonGris-Puesto">Guardar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/puestos.js"></script>

    <script>
        // JavaScript para llenar los datos del modal de edición con los valores del puesto
        var editDepartmentModal = document.getElementById('editDepartmentModal')
        editDepartmentModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget; // Botón que abrió el modal
            var id = button.getAttribute('data-id');
            var nombre = button.getAttribute('data-nombre');
            var descripcion = button.getAttribute('data-descripcion');

            // Llenamos los campos del modal con los valores correspondientes
            document.getElementById('editName').value = nombre;
            document.getElementById('editDescription').value = descripcion;
            // Si es necesario, puedes pasar otros datos como el id
        })
    </script>
</body>
</html>
