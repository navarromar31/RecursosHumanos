@model RecursosHumanos_Models.Puesto

@{
    ViewData["Title"] = "Crear Nuevo Puesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/puesto.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <form asp-action="Crear" method="post" enctype="multipart/form-data" class="p-3">
        @Html.AntiForgeryToken()

        <!-- Nombre del Puesto -->
        <div class="mb-3">
            <label asp-for="NombrePuesto" class="form-label">Nombre del Puesto:</label>
            <input asp-for="NombrePuesto" class="form-control" placeholder="Escribe el nombre del puesto" required />
            <span asp-validation-for="NombrePuesto" class="text-danger"></span>
        </div>

        <!-- Descripción del Puesto -->
        <div class="mb-3">
            <label asp-for="DescripcionPuesto" class="form-label">Descripción:</label>
            <textarea asp-for="DescripcionPuesto" class="form-control" rows="3" placeholder="Escribe la descripción del puesto" required></textarea>
            <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
        </div>


        <!-- Botones -->
        <div class="d-flex justify-content-between">
            <button type="button" class="btn btn-primary" onclick="history.back()">Cancelar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/puesto.js"></script>

