@{
}
@model RecursosHumanos_Models.Puesto

@{
    ViewData["Title"] = "Editar Puesto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Editar" method="post" enctype="multipart/form-data" class="p-3">
    <!-- Campo oculto para el ID -->
    <input type="hidden" asp-for="Id" />

  

    <!-- Nombre del puesto -->
    <div class="mb-3">
        <label asp-for="NombrePuesto" class="form-label">Nombre del Puesto:</label>
        <input asp-for="NombrePuesto" class="form-control" placeholder="Escribe el nombre del puesto" required />
        <span asp-validation-for="NombrePuesto" class="text-danger"></span>
    </div>

    <!-- Descripción del puesto -->
    <div class="mb-3">
        <label asp-for="DescripcionPuesto" class="form-label">Descripción:</label>
        <textarea asp-for="DescripcionPuesto" class="form-control" rows="3" placeholder="Escribe la descripción del puesto" required></textarea>
        <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
    </div>

    

    <!-- Botones -->
    <div class="row">
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <button type="submit" class="btn btn-primary me-md-2">Actualizar</button>
            <a asp-controller="Puesto" asp-action="Index" class="btn btn-success">Regresar</a>

        </div>
    </div>

</form>
