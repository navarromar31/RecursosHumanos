<!DOCTYPE html>
@{
    Layout = null; // No se usa otro layout en un archivo de layout principal
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Talento Humano | HHC</title>

    <!-- Llamar al CSS local y de Bootstrap/página de iconos -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Loyout.css">
</head>
<body>
    <!-- Header -->
    <header id="DivHeader" class="container-fluid">
        <div class="row">
            <div class="col-4 d-flex justify-content-center align-items-center">
                <div id="lineaNaranja" class="container"></div>
            </div>
            <div class="col-4 d-flex justify-content-center align-items-center">
                <img src="/img/RRHHLogo.png" class="img-fluid" alt="Logo HHC" id="imgHeader1">
                <div class="linea-vertical"></div>
                <img src="/img/HHCLogo.png" class="img-fluid" alt="Logo HHC" id="imgHeader2">
            </div>
            <div class="col-4 d-flex justify-content-center align-items-center">
                <div id="lineaNaranja" class="container"></div>
            </div>
        </div>
    </header>

    <!-- Menu Lateral -->
    <div id="wrapper-menu" class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i id="iconMenu" class="bi bi-list"></i>
                </button>
                <div class="sidebar-logo">
                    <a id="a-menu" href="#">Talento Humano</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/" class="sidebar-link">
                        <i id="icon-menu" class="bi bi-bookmark-fill"></i>
                        <span>Inicio</span>
                    </a>
                </li>
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/Perfil" class="sidebar-link">
                        <i id="icon-menu" class="bi bi-person-fill"></i>
                        <span>Perfil</span>
                    </a>
                </li>
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/Colaboradores" class="sidebar-link">
                        <i id="icon" class="bi bi-people-fill"></i>
                        <span>Colaboradores</span>
                    </a>
                </li>
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/Evaluaciones" class="sidebar-link">
                        <i id="icon-menu" class="bi bi-bar-chart-line-fill"></i>
                        <span>Evaluaciones</span>
                    </a>
                </li>
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/Capacitaciones" class="sidebar-link">
                        <i id="icon-menu" class="bi bi-person-vcard-fill"></i>
                        <span>Capacitaciones</span>
                    </a>
                </li>
                <li id="li-menu" class="nav-item sidebar-item">
                    <a id="a-menu" href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i id="icon" class="bi bi-archive-fill"></i>
                        <span>Otras opciones</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li id="li-menu" class="nav-item sidebar-item">
                            <a id="a-menu" href="/Instituciones" class="sidebar-link">
                                <i id="icon" class="bi bi-building-fill"></i>Instituciones
                            </a>
                        </li>
                        <li id="li-menu" class="nav-item sidebar-item">
                            <a id="a-menu" href="/Departamentos" class="sidebar-link">
                                <i id="icon" class="bi bi-diagram-3"></i>Departamentos
                            </a>
                        </li>
                        <li id="li-menu" class="nav-item sidebar-item">
                            <a id="a-menu" href="/Puestos" class="sidebar-link">
                                <i id="icon" class="bi bi-duffle-fill"></i>Puestos
                            </a>
                        </li>
                    </ul>
                </li>
                <li id="li-menu" class="sidebar-item">
                    <a id="a-menu" href="/Logout" class="sidebar-link">
                        <i id="icon-menu" class="bi bi-arrow-bar-left"></i>
                        <span>Cerrar Sesión</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main -->
        <div id="main-menu" class="main">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer id="DivFooter" class="text-dark py-3 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex justify-content-center text-center">
                    <p id="footerText" class="mb-0">Copyright © @DateTime.Now.Year Hospicio de Huérfanos de Cartago.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS local y de Bootstrap/JQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="~/js/Layout.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</body>
</html>