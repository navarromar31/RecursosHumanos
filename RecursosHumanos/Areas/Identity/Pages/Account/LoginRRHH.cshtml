@page
@model LoginRRHH
@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" name="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Cedula">Cedula</label>
        <input type="text" id="Cedula" name="Input.Cedula" class="form-control" />
        <span asp-validation-for="Input.Cedula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RememberMe">Remember me?</label>
        <input type="checkbox" id="RememberMe" name="Input.RememberMe" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<a href="#">Forgot your password?</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
